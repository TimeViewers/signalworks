{
    "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
    "python.formatting.blackArgs": ["--config ${workspaceFolder}/pyproject.toml"],

    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/flake8",
    "python.linting.flake8Args": ["--config=${workspaceFolder}/setup.cfg", "--mypy-config=${workspaceFolder}/setup.cfg"],

    "python.unitTest.pyTestPath": "pytest",
    "python.unitTest.pyTestEnabled": true,

    "python.terminal.activateEnvironment": false,
    "python.sortImports.path": "${workspaceFolder}/.venv/bin/isort",
    "python.sortImports.args": ["-sp ${workspaceFolder}/.isort.cfg"],
    "search.exclude": {
        "**/.git": true,
        "**/docs/source/_build": true,
        "**/docs/source/_static": true,
        "**/data":  true
    },
}